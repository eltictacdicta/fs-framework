<div class="panel-heading">
    <h3 class="panel-title">Facturación</h3>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-sm-4">
            <a href="{{ fsc.divisa.url() }}">Divisa</a>:
            <select name="coddivisa" class="form-control">
                {% for divisa in fsc.divisa.all() %}
                {% if fsc.empresa.coddivisa == divisa.coddivisa %}
                <option value="{{ divisa.coddivisa }}" selected="">{{ divisa.descripcion }}</option>
                {% else %}
                <option value="{{ divisa.coddivisa }}">{{ divisa.descripcion }}</option>
                {% endif %}
                {% endfor %}
            </select>
            <p class="help-block">
                <a href="index.php?page=admin_home#avanzado">Cambiar el formato</a>.
            </p>
        </div>
        <div class="col-sm-4">
            <a href="{{ fsc.ejercicio.url() }}">Ejercicio</a>:
            <select name="codejercicio" class="form-control" autofocus >
                {% for ejercicio in fsc.ejercicio.all() %}
                {% if fsc.empresa.codejercicio == ejercicio.codejercicio %}
                <option value="{{ ejercicio.codejercicio }}" selected="">{{ ejercicio.nombre }}</option>
                {% else %}
                <option value="{{ ejercicio.codejercicio }}">{{ ejercicio.nombre }}</option>
                {% endif %}
                {% endfor %}
            </select>
            <p class="help-block">Sólo sirve para inicializar algunos campos.</p>
        </div>
        <div class="col-sm-4">
            <a href="{{ fsc.serie.url() }}" class="text-capitalize">{{ fs_serie|default('serie') }}</a>:
            <select name="codserie" class="form-control">
                {% for serie in fsc.serie.all() %}
                {% if fsc.empresa.codserie == serie.codserie %}
                <option value="{{ serie.codserie }}" selected="">{{ serie.descripcion }}</option>
                {% else %}
                <option value="{{ serie.codserie }}">{{ serie.descripcion }}</option>
                {% endif %}
                {% endfor %}
            </select>
            <p class="help-block">El {{ fs_irpf|default('IRPF') }} se define para cada {{ fs_serie|default('serie') }}.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="checkbox">
                <label>
                    {% if fsc.empresa.contintegrada %}
                    <input type="checkbox" name="contintegrada" value="TRUE" checked=""/>
                    {% else %}
                    <input type="checkbox" name="contintegrada" value="TRUE"/>
                    {% endif %}
                    Contabilidad integrada
                </label>
            </div>
            <div class="checkbox">
                <label>
                    {% if fsc.empresa.recequivalencia %}
                    <input type="checkbox" name="recequivalencia" value="TRUE" checked=""/>
                    {% else %}
                    <input type="checkbox" name="recequivalencia" value="TRUE"/>
                    {% endif %}
                    Aplicar recargo de equivalencia
                </label>
            </div>
        </div>
        <div class="col-sm-5">
            <a href="{{ fsc.forma_pago.url() }}">Forma de pago</a>:
            <select name="codpago" class="form-control">
                {% for forma_pago in fsc.forma_pago.all() %}
                {% if fsc.empresa.codpago == forma_pago.codpago %}
                <option value="{{ forma_pago.codpago }}" selected="">{{ forma_pago.descripcion }}</option>
                {% else %}
                <option value="{{ forma_pago.codpago }}">{{ forma_pago.descripcion }}</option>
                {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="col-sm-3">
            <a href="{{ fsc.almacen.url() }}">Almacén</a>:
            <select name="codalmacen" class="form-control">
                {% for almacen in fsc.almacen.all() %}
                {% if fsc.empresa.codalmacen == almacen.codalmacen %}
                <option value="{{ almacen.codalmacen }}" selected="">{{ almacen.nombre }}</option>
                {% else %}
                <option value="{{ almacen.codalmacen }}">{{ almacen.nombre }}</option>
                {% endif %}
                {% endfor %}
            </select>
        </div>
    </div>
</div>
<div class="panel-footer" style="text-align: right;">
    <button class="btn btn-sm btn-primary" type="submit" onclick="this.disabled = true; this.form.action = '{{ fsc.url() }}#facturacion'; this.form.submit();">
        <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp; Guardar
    </button>
</div>
