{
    "name": "facturascripts/fs-framework-modern",
    "description": "Modernized FS-Framework",
    "type": "project",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Javier Trujillo",
            "email": "mistertekcom@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/http-foundation": "^7.4",
        "symfony/cache": "^7.4",
        "symfony/dotenv": "^7.4",
        "symfony/routing": "^7.4",
        "symfony/config": "^7.4",
        "symfony/yaml": "^7.4",
        "symfony/translation": "^7.4",
        "symfony/security-csrf": "^7.4",
        "symfony/event-dispatcher": "^7.4",
        "symfony/validator": "^7.4",
        "phpmailer/phpmailer": "^6.0",
        "phpoffice/phpspreadsheet": "^2.0",
        "zircote/swagger-php": "^6.0",
        "twig/twig": "^3.0",
        "symfony/dependency-injection": "^7.4",
        "symfony/form": "^7.4"
    },
    "suggest": {
        "monolog/monolog": "^3.0 - Para logging avanzado con m√∫ltiples handlers"
    },
    "autoload": {
        "psr-4": {
            "FSFramework\\": "src/",
            "FacturaScripts\\": "src/FacturaScripts/",
            "FacturaScripts\\Plugins\\": "plugins/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        },
        "platform": {
            "php": "8.3"
        },
        "platform-check": false
    }
}
