<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th class="text-left">Plugin</th>
                <th class="text-left">Descripción</th>
            </tr>
        </thead>
        {% for value in fsc.plugin_manager.downloads() %}
        {% set tr_class = '' %}
        {% if value.instalado %}
        {% set tr_class = ' class="warning"' %}
        {% elseif value.tipo == 'oculto' %}
        {% set tr_class = ' class="hidden"' %}
        {% elseif not value.estable %}
        {% set tr_class = ' class="danger"' %}
        {% elseif value.tipo == 'gratis' or value.tipo == 'regalo' %}
        {% set tr_class = ' class="success"' %}
        {% endif %}
        <tr{{ tr_class|raw }}>
            <td class="text-center">
                {% if value.imagen %}
                <a href="https://github.com/eltictacdicta/fs-framework/plugin/{{ value.nombre }}" target="_blank" class="thumbnail">
                    <img src="{{ value.imagen }}" alt="{{ value.nombre }}" width="80"/>
                </a>
                {% else %}
                <a href="https://github.com/eltictacdicta/fs-framework/plugin/{{ value.nombre }}" target="_blank" class="btn btn-block btn-default">
                    <i class="fa fa-plug fa-3x" aria-hidden="true"></i>
                </a>
                {% endif %}
            </td>
            <td>
                {{ value.nombre }} &nbsp; v{{ value.version }}
                <br/><br/>
                {% if value.instalado %}
                <a href="{{ fsc.url() }}&caca={{ fsc.random_string(4) }}#plugins" class="btn btn-xs btn-default">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>&nbsp; Instalado
                </a>
                {% elseif value.tipo == 'pago' or value.tipo == 'externo' %}
                <a href="https://github.com/eltictacdicta/fs-framework/plugin/{{ value.nombre }}" target="_blank" class="btn btn-xs btn-info">
                    <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>&nbsp; Comprar
                </a>
                {% elseif value.tipo == 'regalo' %}
                <a href="https://github.com/eltictacdicta/fs-framework/plugin/{{ value.nombre }}" target="_blank" class="btn btn-xs btn-info">
                    <span class="glyphicon glyphicon-gift" aria-hidden="true"></span>&nbsp; Obtener
                </a>
                {% elseif value.estable %}
                <a href="{{ fsc.url() }}&caca={{ fsc.random_string(4) }}&download={{ value.id }}#plugins" class="btn btn-xs btn-primary">
                    <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>&nbsp; Descargar
                </a>
                {% else %}
                <a href="#" class="btn btn-xs btn-primary" onclick="descargar_plugin_inestable('{{ value.id }}')">
                    <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>&nbsp; Descargar
                </a>
                {% endif %}
            </td>
            <td>
                {{ value.descripcion|nl2br }}<br/>
                Última modificación: {{ value.ultima_modificacion }}
                {% if not value.estable %}
                <span class="label label-danger" title="inestable: no lo instales a menos que sepas lo que haces">inestable</span>
                {% endif %}
            </td>
        </tr>
        {% endfor %}
        <tr>
            <td colspan="3">
                <a href="https://github.com/eltictacdicta/fs-framework/plugins?activetab=ListPlugin2017" target="_blank" class="btn btn-block btn-info">
                    <i class="fa fa-plug"></i>&nbsp; Más plugins...
                </a>
            </td>
        </tr>
    </table>
</div>
