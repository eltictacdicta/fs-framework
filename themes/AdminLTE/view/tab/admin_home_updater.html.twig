{# 
 * Pestaña de Actualizador en Admin Home
 * Muestra el estado del actualizador y permite actualizarlo desde aquí
 #}

<div class="container-fluid" style="margin-top: 10px;">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-upload"></i> Estado del Actualizador
                    </h3>
                </div>
                <div class="box-body">
                    {% if fsc.updater_info %}
                    <table class="table table-striped">
                        <tr>
                            <th width="40%">Nombre:</th>
                            <td>{{ fsc.updater_info.name }}</td>
                        </tr>
                        <tr>
                            <th>Versión:</th>
                            <td><span class="label label-primary">{{ fsc.updater_info.version }}</span></td>
                        </tr>
                        <tr>
                            <th>Descripción:</th>
                            <td>{{ fsc.updater_info.description }}</td>
                        </tr>
                        <tr>
                            <th>Última actualización:</th>
                            <td>{{ fsc.updater_info.last_update|default('No disponible') }}</td>
                        </tr>
                    </table>
                    {% else %}
                    <div class="alert alert-warning">
                        <i class="fa fa-exclamation-triangle"></i>
                        No se pudo cargar la información del actualizador.
                    </div>
                    {% endif %}
                </div>
                <div class="box-footer">
                    <a href="updater.php" class="btn btn-primary">
                        <i class="fa fa-external-link"></i> Abrir Actualizador
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="box {% if fsc.updater_update %}box-warning{% else %}box-success{% endif %}">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-refresh"></i> Actualizaciones Disponibles
                    </h3>
                </div>
                <div class="box-body">
                    {% if fsc.updater_update %}
                    <div class="alert alert-info">
                        <h4><i class="fa fa-exclamation-circle"></i> Nueva versión disponible</h4>
                        <p>
                            <strong>Versión actual:</strong> {{ fsc.updater_info.version }}<br>
                            <strong>Nueva versión:</strong> {{ fsc.updater_update.new_version }}
                        </p>
                    </div>
                    <a href="updater.php?action=update_updater" class="btn btn-warning"
                       onclick="this.innerHTML='<i class=\'fa fa-spinner fa-spin\'></i> Actualizando...'; this.disabled=true;">
                        <i class="fa fa-download"></i> Actualizar Actualizador
                    </a>
                    {% else %}
                    <div class="alert alert-success">
                        <h4><i class="fa fa-check-circle"></i> Todo actualizado</h4>
                        <p>Tienes la última versión del actualizador.</p>
                    </div>
                    {% endif %}
                </div>
            </div>
            
            {% if fsc.check_for_updates() %}
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-cloud-download"></i> Actualizaciones del Sistema
                    </h3>
                </div>
                <div class="box-body">
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"></i>
                        Hay actualizaciones disponibles para el núcleo o los plugins.
                    </div>
                    <a href="updater.php" class="btn btn-info">
                        <i class="fa fa-upload"></i> Ir al Actualizador
                    </a>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-database"></i> Copias de Seguridad Recientes
                    </h3>
                </div>
                <div class="box-body">
                    {% if fsc.recent_backups and fsc.recent_backups|length > 0 %}
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Archivo</th>
                                <th>Tipo</th>
                                <th>Tamaño</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for backup in fsc.recent_backups|slice(0, 5) %}
                            <tr>
                                <td>
                                    <i class="fa fa-{{ backup.type == 'database' ? 'database' : 'file-archive-o' }}"></i>
                                    {{ backup.name }}
                                </td>
                                <td>
                                    <span class="label label-{{ backup.type == 'database' ? 'info' : 'success' }}">
                                        {{ backup.type }}
                                    </span>
                                </td>
                                <td>{{ backup.size_formatted }}</td>
                                <td>{{ backup.date }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% else %}
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"></i>
                        No hay copias de seguridad disponibles.
                        <a href="updater.php#backups">Crear una copia de seguridad</a>
                    </div>
                    {% endif %}
                </div>
                <div class="box-footer">
                    <a href="updater.php#backups" class="btn btn-default">
                        <i class="fa fa-list"></i> Ver todas las copias
                    </a>
                    <a href="updater.php?action=create_backup" class="btn btn-success"
                       onclick="this.innerHTML='<i class=\'fa fa-spinner fa-spin\'></i> Creando...'; this.disabled=true;">
                        <i class="fa fa-plus"></i> Crear Copia de Seguridad
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
