<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="es" xml:lang="es" >
<head>
   <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
   <title>{{ trans('password-reset-title') }} - {{ constant('FS_DEMO') ? 'DEMO FacturaScripts' : (fsc.empresa.nombrecorto ?: fsc.empresa.nombre) }}</title>
   <meta name="description" content="FSFramework - Recuperar contraseña" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <meta name="generator" content="FSFramework" />
   <meta name="robots" content="noindex" />
   {% set theme_path = theme_path is defined ? theme_path : 'themes/AdminLTE' %}
   <link rel="shortcut icon" href="{{ constant('FS_PATH') }}view/img/favicon.ico" />
   <link rel="stylesheet" href="{{ constant('FS_PATH') }}view/css/bootstrap.min.css" />
   <link rel="stylesheet" href="{{ constant('FS_PATH') }}view/css/font-awesome.min.css" />
   <link rel="stylesheet" href="{{ constant('FS_PATH') }}{{ theme_path }}/css/AdminLTE.min.css" />
   <link rel="stylesheet" href="{{ constant('FS_PATH') }}view/css/custom.css" />
   
   <script type="text/javascript" src="{{ constant('FS_PATH') }}view/js/jquery.min.js"></script>
   <script type="text/javascript" src="{{ constant('FS_PATH') }}view/js/bootstrap.min.js"></script>
   <script type="text/javascript" src="{{ constant('FS_PATH') }}view/js/jquery.ui.shake.js"></script>
   <script type="text/javascript">
      $(document).ready(function() {
         {% if fsc.get_errors() %}
         $(".login-box").shake();
         {% endif %}
      });
   </script>
</head>
<body class="hold-transition login-page">
   <div class="login-box">
      <div class="login-logo">
         <a href="index.php">
            {% if file_exists(theme_path ~ '/img/logo.png') %}
            <img src="{{ constant('FS_PATH') }}{{ theme_path }}/img/logo.png" style="max-width: 200px;"/>
            {% elseif file_exists(constant('FS_MYDOCS') ~ 'images/logo.png') %}
            <img src="images/logo.png" style="max-width: 200px;"/>
            {% elseif file_exists(constant('FS_MYDOCS') ~ 'images/logo.jpg') %}
            <img src="images/logo.jpg" style="max-width: 200px;"/>
            {% else %}
            <b>Factura</b>Scripts
            {% endif %}
         </a>
      </div>
      
      {% if fsc.get_errors() %}
      <div class="alert alert-danger">
         <ul class="list-unstyled">
            {% for value in fsc.get_errors() %}<li>{{ value }}</li>{% endfor %}
         </ul>
      </div>
      {% endif %}
      
      {% if fsc.get_messages() %}
      <div class="alert alert-success">
         <ul class="list-unstyled">
            {% for value in fsc.get_messages() %}<li>{{ value }}</li>{% endfor %}
         </ul>
      </div>
      {% endif %}

      <div class="login-box-body">
         {# ===== ESTADO: Contraseña cambiada con éxito ===== #}
         {% if fsc.password_changed %}
         <p class="login-box-msg">
            <i class="fa fa-check-circle fa-2x" style="color: #00a65a;"></i>
         </p>
         <p class="login-box-msg">{{ trans('password-reset-success-detail') }}</p>
         <a href="index.php" class="btn btn-primary btn-block btn-flat">
            <i class="fa fa-sign-in"></i>&nbsp; {{ trans('login') }}
         </a>

         {# ===== ESTADO: Solicitar recuperación ===== #}
         {% elseif fsc.action == 'request' and not fsc.email_sent %}
         <p class="login-box-msg">{{ trans('password-reset-request-text') }}</p>

         <form name="f_reset_request" action="index.php?page=password_reset" method="post">
            {{ csrf_field() }}
            <div class="form-group has-feedback">
               <input type="text" name="nick_or_email" class="form-control" placeholder="{{ trans('password-reset-nick-or-email') }}" required="" autocomplete="email"/>
               <span class="fa fa-user form-control-feedback"></span>
            </div>
            <div class="row">
               <div class="col-xs-12">
                  <button type="submit" class="btn btn-primary btn-block btn-flat">
                     <i class="fa fa-envelope"></i>&nbsp; {{ trans('password-reset-send-link') }}
                  </button>
               </div>
            </div>
         </form>

         <br/>
         <a href="index.php" class="text-center">
            <i class="fa fa-arrow-left"></i>&nbsp; {{ trans('password-reset-back-to-login') }}
         </a>

         {# ===== ESTADO: Email enviado ===== #}
         {% elseif fsc.email_sent %}
         <p class="login-box-msg">
            <i class="fa fa-envelope-o fa-2x" style="color: #3c8dbc;"></i>
         </p>
         <p class="login-box-msg">{{ trans('password-reset-check-email') }}</p>
         <br/>
         <a href="index.php" class="btn btn-default btn-block btn-flat">
            <i class="fa fa-arrow-left"></i>&nbsp; {{ trans('password-reset-back-to-login') }}
         </a>

         {# ===== ESTADO: Formulario nueva contraseña ===== #}
         {% elseif fsc.action == 'reset' and fsc.token_valid %}
         <p class="login-box-msg">{{ trans('password-reset-new-password-text') }}</p>

         <form name="f_new_password" action="index.php?page=password_reset&nick={{ fsc.reset_nick|url_encode }}&token={{ fsc.reset_token|url_encode }}{% if fsc.reset_expires %}&_expiration={{ fsc.reset_expires|url_encode }}{% endif %}{% if fsc.reset_signature %}&_hash={{ fsc.reset_signature|url_encode }}{% endif %}" method="post">
            {{ csrf_field() }}
            <input type="hidden" name="nick" value="{{ fsc.reset_nick }}"/>
            <input type="hidden" name="token" value="{{ fsc.reset_token }}"/>
            <input type="hidden" name="_expiration" value="{{ fsc.reset_expires }}"/>
            <input type="hidden" name="_hash" value="{{ fsc.reset_signature }}"/>
            <div class="form-group has-feedback">
               <input type="password" name="new_password" class="form-control" maxlength="32" minlength="8" required="" placeholder="{{ trans('new-password') }}" autofocus=""/>
               <span class="fa fa-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
               <input type="password" name="new_password2" class="form-control" maxlength="32" minlength="8" required="" placeholder="{{ trans('repeat-new-password') }}"/>
               <span class="fa fa-lock form-control-feedback"></span>
            </div>
            <div class="row">
               <div class="col-xs-12">
                  <button type="submit" class="btn btn-primary btn-block btn-flat">
                     <i class="fa fa-key"></i>&nbsp; {{ trans('password-reset-change-password') }}
                  </button>
               </div>
            </div>
         </form>

         <br/>
         <a href="index.php" class="text-center">
            <i class="fa fa-arrow-left"></i>&nbsp; {{ trans('password-reset-back-to-login') }}
         </a>

         {# ===== ESTADO: Token inválido o expirado ===== #}
         {% elseif fsc.action == 'reset' and not fsc.token_valid %}
         <p class="login-box-msg">
            <i class="fa fa-exclamation-triangle fa-2x" style="color: #dd4b39;"></i>
         </p>
         <p class="login-box-msg">{{ trans('password-reset-expired-detail') }}</p>
         <a href="index.php?page=password_reset" class="btn btn-primary btn-block btn-flat">
            <i class="fa fa-refresh"></i>&nbsp; {{ trans('password-reset-request-new') }}
         </a>
         <br/>
         <a href="index.php" class="text-center">
            <i class="fa fa-arrow-left"></i>&nbsp; {{ trans('password-reset-back-to-login') }}
         </a>
         {% endif %}
      </div>
      
      <div class="text-center mt-3" style="margin-top: 20px;">
         <a href="https://github.com/eltictacdicta/fs-framework" target="_blank" class="text-muted"><i class="fa fa-book"></i> Documentación</a>
         &nbsp;&nbsp;
         <a href="https://github.com/eltictacdicta/fs-framework/issues" target="_blank" class="text-muted"><i class="fa fa-shield"></i> Soporte</a>
      </div>
   </div>

   {% if constant('FS_DB_HISTORY') %}
   <div class="container-fluid" style="margin-top: 50px;">
      <div class="well">
         <h4>Consultas SQL:</h4>
         <ol style="font-size: 11px;">
         {% for value in fsc.get_db_history() %}<li>{{ value }}</li>{% endfor %}
         </ol>
      </div>
   </div>
   {% endif %}
</body>
</html>
