<script type="text/javascript">
    function fs_marcar_todo() {
        $('#f_enable_pages input:checkbox').prop('checked', true);
    }
    function eliminar(name) {
        bootbox.confirm({
            message: '¿Realmente desea eliminar este plugin?',
            title: '<b>Atención</b>',
            callback: function (result) {
                if (result) {
                    window.location.href = '{{ fsc.url()|raw }}&delete_plugin=' + name + '#plugins';
                }
            }
        });
    }
    function restaurar_backup(name) {
        bootbox.confirm({
            message: '¿Desea restaurar el plugin <b>' + name + '</b> desde el backup? El plugin actual será reemplazado por la versión anterior.',
            title: '<b>Restaurar versión anterior</b>',
            callback: function (result) {
                if (result) {
                    window.location.href = '{{ fsc.url()|raw }}&restore_backup=' + name + '#plugins';
                }
            }
        });
    }
    function descargar_plugin_inestable(id) {
        bootbox.confirm({
            message: 'Este plugin está marcado como inestable. Significa que <b>no se recomienda su uso</b>,\n\
 que todavía está en desarrollo y puede contener errores. ¿Estas seguro de que quieres descargarlo?',
            title: '<b>Atención</b>',
            callback: function (result) {
                if (result) {
                    window.location.href = '{{ fsc.url()|raw }}&caca={{ fsc.random_string(4)|raw }}&download=' + id + '#plugins';
                }
            }
        });
    }
    function mostrar_modal_plugin() {
        console.log('Intentando mostrar modal de plugin...');
        var modal = $('#modal_add_plugin');
        console.log('Modal encontrado:', modal.length, 'elementos');

        if (modal.length > 0) {
            console.log('Modal encontrado, mostrando...');
            try {
                modal.modal('show');
                console.log('Modal mostrado con Bootstrap');
                return;
            } catch (e) {
                console.log('Error con Bootstrap modal:', e);
            }

            try {
                modal.css({
                    'display': 'block',
                    'opacity': '1',
                    'visibility': 'visible',
                    'z-index': '9999'
                });
                modal.addClass('show');
                if (!$('.modal-backdrop').length) {
                    $('body').append('<div class="modal-backdrop fade show" style="display: block; opacity: 0.5; z-index: 1040;"></div>');
                }
                console.log('Modal mostrado con método directo');
            } catch (e) {
                console.log('Error con método directo:', e);
            }

            try {
                modal.show();
                modal.attr('aria-hidden', 'false');
                $('body').addClass('modal-open');
                console.log('Modal mostrado con jQuery show()');
            } catch (e) {
                console.log('Error con jQuery show():', e);
            }

            setTimeout(function() {
                modal.find('input[type="file"]').first().focus();
                console.log('Campo de archivo enfocado');
            }, 100);
        } else {
            console.error('Modal #modal_add_plugin no encontrado');
        }
    }

    function ocultar_modal_plugin() {
        var modal = $('#modal_add_plugin');
        if (modal.length > 0) {
            modal.hide();
            modal.removeClass('show');
            modal.attr('aria-hidden', 'true');
            $('body').removeClass('modal-open');
            $('.modal-backdrop').remove();
            console.log('Modal ocultado');
        }
    }

    window.ocultarModalPlugin = ocultar_modal_plugin;

    function mostrar_modales_confirmacion() {
        {% if fsc.pending_plugin %}
        $('#plugin_name_install').text('{{ fsc.pending_plugin.name }}');
        $('#current_version_install').text('{{ fsc.pending_plugin.current_version }}');
        $('#new_version_install').text('{{ fsc.pending_plugin.new_version }}');
        $('#modal_confirm_overwrite_install').modal('show');
        {% endif %}

        {% if fsc.pending_download %}
        $('#plugin_name_download').text('{{ fsc.pending_download.name }}');
        $('#current_version_download').text('{{ fsc.pending_download.current_version }}');
        $('#link_confirm_download').attr('href', '{{ fsc.url()|raw }}&download={{ fsc.pending_download.plugin_id }}&confirm_download=1#plugins');
        $('#modal_confirm_overwrite_download').modal('show');
        {% endif %}
    }

    $(document).ready(function () {
        mostrar_modales_confirmacion();

        $('#modal_confirm_overwrite_install').on('hidden.bs.modal', function () {
            {% if fsc.pending_plugin %}
            $.post('{{ fsc.url()|raw }}', { cancel_pending_install: '1' });
            {% endif %}
        });

        $('#modal_confirm_overwrite_download').on('hidden.bs.modal', function () {
            {% if fsc.pending_download %}
            $.post('{{ fsc.url()|raw }}', { cancel_pending_download: '1' });
            {% endif %}
        });
        
        {% if fsc.step == '1' %}
        $('#tab_panel_control a[href="#t_descargas"]').tab('show');
        {% endif %}

        if (window.location.hash.substring(1) == 'paginas') {
            $('#tab_panel_control a[href="#t_paginas"]').tab('show');
        } else if (window.location.hash.substring(1) == 'plugins') {
            $('#tab_panel_control a[href="#t_plugins"]').tab('show');
        } else if (window.location.hash.substring(1) == 'descargas') {
            $('#tab_panel_control a[href="#t_descargas"]').tab('show');
        } else if (window.location.hash.substring(1) == 'privados') {
            $('#tab_panel_control a[href="#t_privados"]').tab('show');
        } else if (window.location.hash.substring(1) == 'avanzado') {
            $('#tab_panel_control a[href="#t_avanzado"]').tab('show');
        }

        $('#marcar_todo_enabled').click(function () {
            var checked = $(this).prop('checked');
            $("#f_enable_pages input[name='enabled[]']").prop('checked', checked);
        });

        window.mostrarModalPlugin = mostrar_modal_plugin;

        $('[data-toggle="modal"]').click(function(e) {
            e.preventDefault();
            var target = $(this).attr('data-target');
            if (target) {
                $(target).modal('show');
            }
        });

        if ($('#modal_add_plugin').length > 0) {
            $('#modal_add_plugin').on('shown.bs.modal', function () {
                $(this).find('input[type="file"]').first().focus();
            });
        }

        $('#btn_add_plugin').click(function(e) {
            e.preventDefault();
            console.log('Botón añadir plugin clickeado');
            mostrar_modal_plugin();
        });

        $('#btn_add_plugin_tab').click(function(e) {
            e.preventDefault();
            console.log('Botón añadir plugin en pestaña clickeado');
            mostrar_modal_plugin();
        });
    });
</script>

