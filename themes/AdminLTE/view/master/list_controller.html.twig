{{ include('header.html.twig') }}

{% if fsc.template_top %}
{{ include(resolve_template(fsc.template_top)) }}
{% else %}
<div class="container-fluid" style="margin-bottom: 10px;">
    <div class="row">
        <div class="col-sm-4">
            <span class="btn-group">
                <a class="btn btn-sm btn-default" href="{{ fsc.url() }}" title="Recargar la página">
                    <i class="fa fa-refresh" aria-hidden="true"></i>
                </a>
                {% if fsc.page.is_default() %}
                <a class="btn btn-sm btn-default active" href="{{ fsc.url() }}&amp;default_page=FALSE" title="Marcada como página de inicio (pulsa de nuevo para desmarcar)">
                    <i class="fa fa-bookmark" aria-hidden="true"></i>
                </a>
                {% else %}
                <a class="btn btn-sm btn-default" href="{{ fsc.url() }}&amp;default_page=TRUE" title="Marcar como página de inicio">
                    <i class="fa fa-bookmark-o" aria-hidden="true"></i>
                </a>
                {% endif %}
            </span>
            <span class="btn-group">
                {% for value in fsc.extensions %}
                {% if value.type == 'button' %}
                <a href="index.php?page={{ value.from }}{{ value.params }}" class="btn btn-sm btn-default">{{ value.text|raw }}</a>
                {% endif %}
                {% endfor %}
            </span>
        </div>
        <div class="col-sm-8 text-right">
            <span class="h2 text-capitalize">{{ fsc.page.folder }} / {{ fsc.page.title }}</span>
        </div>
    </div>
</div>
{% endif %}

<ul class="nav nav-tabs">
    {% for value in fsc.tabs %}
    {% if value.name == fsc.active_tab %}
    <li role="presentation" class="active">
        <a href="{{ fsc.url() }}&tab={{ value.name }}">
            <i class="fa {{ value.icon }} fa-fw" aria-hidden="true"></i>
            <span class="hidden-xs">{{ value.title }}</span>
            <span class="badge">{{ fsc.show_numero(value.count, 0) }}</span>
        </a>
    </li>
    {% else %}
    <li role="presentation">
        <a href="{{ fsc.url() }}&tab={{ value.name }}">
            <i class="fa {{ value.icon }} fa-fw" aria-hidden="true"></i>
            <span class="hidden-xs hidden-sm">{{ value.title }}</span>
            <span class="badge">{{ fsc.show_numero(value.count, 0) }}</span>
        </a>
    </li>
    {% endif %}
    {% endfor %}
</ul>

<form name="f_custom_search" action="{{ fsc.url() }}&tab={{ fsc.active_tab }}" method="post" class="form">
    {{ csrf_field() }}
    <input type="hidden" name="offset" value="{{ fsc.offset }}"/>
    <div class="container-fluid" style="margin-top: 15px; margin-bottom: 10px;">
        <div class="row">
            {% if fsc.get_current_tab('buttons')|length > 0 %}
            <div class="col-sm-2">
                <div class="btn-group">
                    {% for value in fsc.get_current_tab('buttons') %}
                    {% set icon = '' %}
                    {% if value.icon %}
                        {% set icon = '<i class="fa ' ~ value.icon ~ '" aria-hidden="true"></i>&nbsp; ' %}
                    {% endif %}
                    <a href="{{ value.link }}" target="{{ value.target }}" id="{{ value.id }}" class="btn btn-sm {{ value.class }}">{{ icon|raw }}{{ value.label }}</a>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
            
            {% set search_columns = fsc.get_current_tab('search_columns') %}
            {% if search_columns|length > 0 %}
            <div class="col-sm-2">
                <div class="input-group">
                    <input class="form-control" type="text" name="query" value="{{ fsc.query }}" autocomplete="off" autofocus="" placeholder="Buscar"/>
                    <span class="input-group-btn hidden-sm">
                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </button>
                    </span>
                </div>
            </div>
            {% endif %}
            
            {% for value in fsc.get_current_tab('filters') %}
            <div class="col-sm-2">
                {{ value.show()|raw }}
            </div>
            {% endfor %}
            
            {% set sort_options = fsc.get_current_tab('sort_options') %}
            {% if sort_options|length > 0 %}
            <div class="col-sm-2">
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-sort-amount-asc" aria-hidden="true"></i>
                    </div>
                    <select name="sort" class="form-control" onchange="this.form.submit();">
                        {% for key, value in sort_options %}
                        {% if key == fsc.sort_option %}
                        <option value="{{ key }}" selected="">{{ value }}</option>
                        {% else %}
                        <option value="{{ key }}">{{ value }}</option>
                        {% endif %}
                        {% endfor %}
                    </select>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                {% for value in fsc.decoration.get_columns(fsc.active_tab) %}
                <th class="{{ value.class }}">{{ value.title }}</th>
                {% endfor %}
            </tr>
        </thead>
        {% for value1 in fsc.get_current_tab('cursor') %}
        <tr class="{{ fsc.decoration.row_class(fsc.active_tab, value1) }}">
            {% for key2, value2 in fsc.decoration.get_columns(fsc.active_tab) %}
            {{ fsc.decoration.show(key2, value2, value1)|raw }}
            {% endfor %}
        </tr>
        {% else %}
        <tr class="warning">
            <td colspan="20">Sin resultados</td>
        </tr>
        {% endfor %}
    </table>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 text-center">
            <ul class="pagination">
                {% for value in fsc.get_pagination() %}
                <li{% if value.active %} class="active"{% endif %}>
                    <a href="#" onclick="document.f_custom_search.offset.value = '{{ value.offset }}';document.f_custom_search.submit();">{{ value.num }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

{% if fsc.template_bottom %}
{{ include(resolve_template(fsc.template_bottom)) }}
{% endif %}

{{ include('footer.html.twig') }}
